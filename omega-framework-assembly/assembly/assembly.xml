<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>${project.groupId}:*:*</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <fileSets>

        <!--fileSet>
            <directory>../config-repo</directory>
            <outputDirectory>config-repo</outputDirectory>
        </fileSet-->
        <fileSet>
            <directory>../bin</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../etc</directory>
            <outputDirectory>etc</outputDirectory>
         </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../README.md</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>omega-framework-datasource/pom.xml</source>
            <outputDirectory>etc/omega-framework-datasource.pom</outputDirectory>
        </file>
        <file>
            <source>omega-framework-task-common/pom.xml</source>
            <outputDirectory>etc/omega-framework-task-common.pom</outputDirectory>
        </file>
    </files>
</assembly>